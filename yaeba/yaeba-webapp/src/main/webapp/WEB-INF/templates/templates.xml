<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

	<!-- Default Main Template -->
	<definition name="baseLayout" template="/WEB-INF/templates/template.jsp">
		<put-attribute name="title" value="Simple Tiles 2 Example" type="string" />
		<put-attribute name="header" value="/WEB-INF/templates/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/templates/menu.jsp" />
		<put-attribute name="content" value="/WEB-INF/templates/blank.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/templates/sidebar.jsp" />
		<put-attribute name="footer-content" value="/WEB-INF/templates/footer-content.jsp" />
	</definition>

	<definition name="welcome" extends="baseLayout">
		<put-attribute name="title" value="Accueil" />
		<put-attribute name="content" value="/WEB-INF/templates/welcome.jsp" />
	</definition>

	<definition name="login" extends="baseLayout">
		<put-attribute name="title" value="Login" />
		<put-attribute name="content" value="/WEB-INF/templates/login.jsp" />
	</definition>
	
	<definition name="error" extends="baseLayout">
		<put-attribute name="title" value="Erreur" />
		<put-attribute name="content" value="/WEB-INF/templates/error.jsp" />
	</definition>

</tiles-definitions>
